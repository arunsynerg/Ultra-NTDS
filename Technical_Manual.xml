									  with <a onclick="javascript:parent.showPDF(&quot;../Author/Contents/NTDS/The_New_Torpedo_Defence_System/Technical_Manual/Images/Plate_1_1.pdf&quot;);parent.masterframe.rows=&quot;70%,30%&quot;" actuate="user">
										  inter unit cable diagram.<img src="../Author/Contents/NTDS/The_New_Torpedo_Defence_System/Technical_Manual/Images/book.jfif" style="height:40px;width:50px;" />
